@model Entities.Concrete.Writer

@{
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    @Html.Partial("Partial/_ContentHeader")
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    @using (Html.BeginForm("Add", "Writer", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.LabelFor(w => w.FirstName)
                            @Html.TextBoxFor(w => w.FirstName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(w => w.FirstName)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(w => w.LastName)
                            @Html.TextBoxFor(w => w.LastName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(w => w.LastName)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(w => w.Email)
                            @Html.TextBoxFor(w => w.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(w => w.Email)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(w => w.About)
                            @Html.TextBoxFor(w => w.About, new { @class = "form-control" })
                            @Html.ValidationMessageFor(w => w.About)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(w => w.Image)
                            @Html.TextBoxFor(w => w.Image, new { @class = "form-control" })
                            @Html.ValidationMessageFor(w => w.Image)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(w => w.Password)
                            @Html.TextBoxFor(w => w.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(w => w.Password)
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success">Kaydet</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>