@model Entities.Concrete.Heading

@{
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    @Html.Partial("Partial/_ContentHeader")
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    @using (Html.BeginForm("Add", "Heading", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.LabelFor(h => h.Name)
                            @Html.TextBoxFor(h => h.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(h => h.Name)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(h => h.CategoryId)
                            @Html.DropDownListFor(h => h.CategoryId,(List<SelectListItem>)ViewBag.CategoryList , new { @class = "form-control" })
                            @Html.ValidationMessageFor(h => h.CategoryId)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(h => h.WriterId)
                            @Html.DropDownListFor(h => h.WriterId, (List<SelectListItem>)ViewBag.WriterList , new { @class = "form-control" })
                            @Html.ValidationMessageFor(h => h.WriterId)
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">Kaydet</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>