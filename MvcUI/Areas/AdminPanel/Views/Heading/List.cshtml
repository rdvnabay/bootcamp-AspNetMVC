@model  List<Entities.Concrete.Heading>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    @Html.Partial("Partial/_ContentHeader")
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <a href="/AdminPanel/Category/Add" class="btn btn-sm btn-outline-info">Kategori Ekle</a>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Kategorisi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var heading in Model)
                    {
                    <tr>
                        <th>@heading.Id</th>
                        <th>@heading.Name</th>
                        <th>@heading.CategoryId</th>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>