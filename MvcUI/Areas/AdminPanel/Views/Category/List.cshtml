@using Entities.Concrete
@model List<Category>
@{
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    @Html.Partial("Partial/_ContentHeader")
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <a href="#" class="btn btn-sm btn-outline-info">Kategori Ekle</a>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Başlıklar</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <th>@category.Id</th>
                            <td>@category.Name</td>
                            <td></td>
                            <td>
                                <a href="#" class="btn btn-sm btn-outline-warning">Düzenle</a>
                            </td>
                            <td>
                                <a href="#" class="btn btn-sm btn-outline-danger">Sil</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>