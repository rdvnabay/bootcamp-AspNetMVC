@model Entities.Concrete.Category

@{
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    @Html.Partial("Partial/_ContentHeader")
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                        @using (Html.BeginForm("Add", "Category", FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.LabelFor(c => c.Name)
                                @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(c => c.Name)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(c => c.Description)
                                @Html.TextAreaFor(c => c.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(c => c.Description)
                            </div>

                            <div class="form-group">
                                <button class="btn btn-success">Kaydet</button>
                            </div>
                        }
                </div>
            </div>
        </div>
    </div>
</div>